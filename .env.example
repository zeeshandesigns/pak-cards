# Currency Symbol
NEXT_PUBLIC_CURRENCY_SYMBOL_PKR='â‚¨'

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# Neon Database Configuration
# Use the pooler URL for application queries (with connection pooling)
DATABASE_URL="postgresql://username:password@hostname-pooler.region.aws.neon.tech/dbname?sslmode=require"

# Use the direct URL for migrations and seeds (direct connection)
DIRECT_URL="postgresql://username:password@hostname.region.aws.neon.tech/dbname?sslmode=require"

# Inngest (Background Jobs)
INGEST_EVENT_KEY=your_inngest_event_key
INGEST_SIGNIN_KEY=your_inngest_signin_key

# ImageKit (File Uploads & CDN)
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_id

# Prisma Configuration
# Required for Neon adapter - DO NOT CHANGE
PRISMA_CLIENT_ENGINE_TYPE="library"

# Prisma Optimize (Optional - for query performance monitoring)
OPTIMIZE_API_KEY=your_optimize_api_key